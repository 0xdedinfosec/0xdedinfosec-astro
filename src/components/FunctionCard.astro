---
import { Picture } from 'astro:assets';

const { title, description, slug, image, ...rest } = Astro.props;
---

<a
    href={`/snippets/${slug}`}
    class='border border-grey-200 dark:border-gray-800 rounded p-4 w-full bg-white dark:bg-gray-900'
    {...rest}
>
    <Picture
        src={image}
        class='rounded-full h-10 w-10 object-contain'
        alt={title}
        formats={['avif', 'webp']}
    />
    <h3
        class='text-lg font-bold text-left mt-2 text-gray-900 dark:text-gray-100'
    >
        {title}
    </h3>
    <p class='mt-1 text-gray-700 dark:text-gray-400'>{description}</p>
</a>
