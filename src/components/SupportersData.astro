---
import { format } from 'date-fns';

const { msg, name, coffee, date } = Astro.props;
---

<div class='flex flex-col space-y-2'>
    <div class='prose dark:prose-dark w-full break-words'>
        {msg ? msg : '-'}
    </div>
    <div class='flex items-center space-x-3'>
        <p class='text-sm text-gray-500'>{name}</p>
        <span class='text-gray-200 dark:text-gray-800'>/</span>
        <p class='text-sm text-gray-500'>{`${coffee}$`}</p>
        <span class='text-gray-200 dark:text-gray-800'>/</span>
        <p class='text-sm text-gray-400 dark:text-gray-600'>
            {format(new Date(date), "d MMM yyyy 'at' h:mm bb")}
        </p>
    </div>
</div>
