---
type Props = {
    title: string;
    cons: string[];
};

const { title, cons } = Astro.props as Props;
---

<div
    class='border border-red-200 dark:border-red-900 bg-red-50 dark:bg-red-900 rounded-xl p-6 my-6 w-full'
>
    <span>{`You might not use ${title} if...`}</span>
    <div class='mt-4'>
        {
            cons.map((con) => (
                <div class='flex font-medium items-baseline mb-2'>
                    <div class='h-4 w-4 mr-2'>
                        <svg class='h-4 w-4 text-red-500' viewBox='0 0 24 24'>
                            <g
                                fill='none'
                                stroke='currentColor'
                                stroke-width='2'
                                stroke-linecap='round'
                                stroke-linejoin='round'
                            >
                                <path d='M22 11.08V12a10 10 0 11-5.93-9.14' />
                                <path d='M22 4L12 14.01l-3-3' />
                            </g>
                        </svg>
                    </div>
                    <span>{con}</span>
                </div>
            ))
        }
    </div>
</div>
